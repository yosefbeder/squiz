// Dragging Elements
personDesc.forEach(desc => {
  desc.addEventListener('dragstart', function (e) {
    desc.classList.add('dragging');
  });
  desc.addEventListener('dragend', function (e) {
    desc.classList.remove('dragging');
  });
});

